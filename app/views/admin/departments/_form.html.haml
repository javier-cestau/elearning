.container
  %h2
    = context
    departamento
  .container
  = simple_form_for [:admin ,@department]  do |f|
    = f.error_notification
    - @department.errors.full_messages.each do |msg|
      .alert.alert-danger
        = msg
    %p Los campos marcados con (*) son obligatorios
    .data-eval
      = f.input :name, required: true , label: "Nombre del departamento", placeholder: "Nombre del departamento....", error: false
    .form-actions.align-text
      = f.button :submit, context, class: "btn blue lighten-3 submit"
